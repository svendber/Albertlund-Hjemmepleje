<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Homecare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Albertslund Homecare", "Home", "People", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @switch (TempData["NavBar"])
            {
                case "hide":
                    break;
                default:
                    <div id="theDiv" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Ret profil", "Settings", "People")</li>
                            @switch (TempData["notAdmin"])
    {
        case "user":
            break;
        default:
                        <li>@Html.ActionLink("Opret bruger", "Create", "People")</li>
                        <li>@Html.ActionLink("Log", "Index", "Logs")</li>
            break;
}
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>@Html.ActionLink("Log ud", "Logout", "People")</li>
                        </ul>
                    </div>
                    break;
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - By Julie, Svend & Olivia</p>
        </footer>
    </div>

    <!-- <script type="text/javascript">
         window.onload = function () {
             if (Session["login"] == null) {
                 document.getElementById("theDiv").style.display = 'none';
             }
         }
     </script> -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
